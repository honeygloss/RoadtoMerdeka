<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#e0e0e0" /> <!-- Light gray background color -->
            <corners android:radius="10dp" /> <!-- Rounded corners for the background -->
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:drawable="@android:color/transparent" />
    </item>
    <item android:id="@android:id/progress">
        <shape>
            <solid android:color="@color/blue2" /> <!-- Blue color for the progress bar -->
            <corners android:radius="10dp" /> <!-- Rounded corners for the progress -->
            <size android:height="20dp" /> <!-- Increase the height of the progress bar -->
        </shape>
    </item>
</layer-list>
