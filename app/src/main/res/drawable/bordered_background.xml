<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <stroke android:color="@color/grey" android:width="1dp" /> <!-- Border width -->
            <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp" /> <!-- Adds outer padding for border -->
        </shape>
    </item>
</layer-list>

