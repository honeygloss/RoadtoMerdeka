<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aura_background">

    <!-- GIF Background -->
    <ImageView
        android:id="@+id/confetti_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
       />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Trophy Image -->
        <ImageView
            android:id="@+id/trophy_icon"
            android:layout_width="263dp"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Trophy Icon"
            android:src="@drawable/gold" />

        <!-- Congratulations Text -->
        <TextView
            android:id="@+id/quiz_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!!"
            android:fontFamily="@font/caprasimo_regular"
            android:textSize="36sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Completed Quiz Title -->
        <TextView
            android:id="@+id/points_earned_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You've earned +70 points"
            android:fontFamily="@font/caprasimo_regular"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:progress="75"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center" />


            <!-- Best Score -->
            <TextView
                android:id="@+id/best_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Score: 180"
                android:textSize="16sp"
                android:fontFamily="@font/timeless_memories_regular"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <!-- Time Taken -->
            <TextView
                android:id="@+id/time_taken_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Taken: 5m 45s"
                android:textSize="16sp"
                android:fontFamily="@font/timeless_memories_regular"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textStyle="bold"/>


        <!-- More Content -->

        <!-- Play Again Button -->
        <Button
            android:id="@+id/play_again_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Play Again"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue3"
            android:fontFamily="@font/timeless_memories_regular"
            android:textSize="16sp" />

        <!-- Continue Journey Button -->
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Continue Journey"
            android:backgroundTint="@color/blue3"
            android:textColor="@android:color/white"
            android:fontFamily="@font/timeless_memories_regular"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>
